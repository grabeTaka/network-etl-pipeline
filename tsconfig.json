{
  "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,

      "outDir": "./dist",
      "moduleResolution": "node",
      "removeComments": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "exclude": ["node_modules", "dist"],
    "include": ["./src", "test", "jest/test"]
}